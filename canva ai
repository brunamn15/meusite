    <script>
        let currentChapter = 'intro';
        const chapters = ['intro', 'navigation', 'resources', 'prompts', 'tools', 'strategies'];
        
        function showChapter(chapterId) {
            // Hide all chapters
            chapters.forEach(id => {
                const chapter = document.getElementById(id);
                const navItem = document.querySelector(`[onclick="showChapter('${id}')"]`);
                
                if (chapter) chapter.classList.remove('active');
                if (navItem) navItem.classList.remove('active');
            });
            
            // Show selected chapter
            const selectedChapter = document.getElementById(chapterId);
            const selectedNavItem = document.querySelector(`[onclick="showChapter('${chapterId}')"]`);
            
            if (selectedChapter) {
                selectedChapter.classList.add('active');
                selectedChapter.classList.add('fade-in');
            }
            if (selectedNavItem) selectedNavItem.classList.add('active');
            
            currentChapter = chapterId;
            updateProgress();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        function updateProgress() {
            const currentIndex = chapters.indexOf(currentChapter);
            const progress = ((currentIndex + 1) / chapters.length) * 100;
            document.getElementById('progressBar').style.width = progress + '%';
        }
        
        function copyPrompt(element) {
            const text = element.textContent.trim();
            navigator.clipboard.writeText(text).then(() => {
                // Show feedback
                const originalText = element.textContent;
                element.textContent = '‚úÖ Copiado!';
                element.classList.add('bg-green-100');
                
                setTimeout(() => {
                    element.textContent = originalText;
                    element.classList.remove('bg-green-100');
                }, 2000);
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                
                const originalText = element.textContent;
                element.textContent = '‚úÖ Copiado!';
                setTimeout(() => {
                    element.textContent = originalText;
                }, 2000);
            });
        }
        
        // Initialize progress
        updateProgress();
        
        // Add keyboard navigation
        document.addEventListener('keydown', (e) => {
            const currentIndex = chapters.indexOf(currentChapter);
            
            if (e.key === 'ArrowRight' && currentIndex < chapters.length - 1) {
                showChapter(chapters[currentIndex + 1]);
            } else if (e.key === 'ArrowLeft' && currentIndex > 0) {
                showChapter(chapters[currentIndex - 1]);
            }
        });
    </script>
